// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Clan {
    id                  Int    @id @default(autoincrement())
    tag                 String
    guildID             String
    maxCapitalPeak      Int
    maxBarbarianCamp    Int
    maxWizardValley     Int
    maxBalloonLagoon    Int
    maxBuildersWorkshop Int
    maxDragonCliffs     Int
    maxGolemQuarry      Int
    maxSkeletonPark     Int
    maxGoblinMines      Int
}

model PageButton {
    id          Int      @id @default(autoincrement())
    currentPage Int
    pages       String
    creation    DateTime
    clanTag     String
}
